  "shortcuts": [
    {
      "name": "Yeni İlan",
      "short_name": "Yeni İlan",
      "description": "Yeni ilan oluştur",
      "url": "/admin/ilanlar/create",
      "icons": [
        {
          "src": "/images/shortcut-new-listing.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Ana dashboard",
      "url": "/admin/dashboard",
      "icons": [
        {
          "src": "/images/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Kategoriler",
      "short_name": "Kategoriler",
      "description": "İlan kategorileri",
      "url": "/admin/ilan-kategorileri",
      "icons": [
        {
          "src": "/images/shortcut-categories.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "AI Analiz",
      "short_name": "AI Analiz",
      "description": "AI destekli analiz",
      "url": "/admin/ai/analysis",
      "icons": [
        {
          "src": "/images/shortcut-ai-analysis.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://yalihanemlak.com/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "file_handlers": [
    {
      "action": "/admin/upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+yali",
      "url": "/handle?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/admin/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  }
}
