  "examples": {
    "before": {
      "input": "<input type=\"text\" name=\"email\" class=\"form-control\">",
      "violation": "Missing: w-full, px-4, py-3, rounded-lg, focus:ring-2, dark mode support",
      "severity": "error"
    },
    "after": {
      "input": "<input type=\"text\" name=\"email\" id=\"email\" value=\"{{ old('email') }}\" required class=\"w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 @error('email') border-red-500 @enderror\" placeholder=\"E-posta adresiniz\">",
      "compliance": "100%",
