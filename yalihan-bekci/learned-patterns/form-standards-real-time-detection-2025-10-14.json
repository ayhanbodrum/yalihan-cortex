    ]
  },
  "integration_commands": {
    "check_file": "php tools/context7/form-standards-checker.php --file={file}",
    "auto_fix_file": "php tools/context7/form-standards-fixer.php --file={file}",
    "check_all": "php tools/context7/form-standards-checker.php",
    "report": "php tools/context7/form-standards-checker.php --report=json > report.json"
  },
