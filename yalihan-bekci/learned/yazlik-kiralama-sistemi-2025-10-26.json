      }
    },
    "controllers": {
      "YazlikKiralamaController": "app/Http/Controllers/Admin/YazlikKiralamaController.php",
      "TakvimController": "app/Http/Controllers/Admin/TakvimController.php"
    },
    "routes": {
      "admin": ["/admin/yazlik-kiralama", "/admin/rezervasyonlar", "/admin/takvim/{ilan}"],
      "public": ["/yazlik-kiralama", "/yazlik-kiralama/{ilan:slug}"],
      "api": ["/api/yazlik-kiralama/fiyat-hesapla", "/api/yazlik-kiralama/musaitlik-kontrol"]
