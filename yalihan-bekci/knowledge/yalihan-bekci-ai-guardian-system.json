{
  "system_name": "Yalıhan Bekçi - AI Guardian System",
  "version": "1.0.0",
  "last_updated": "2025-10-15T21:35:00Z",
  "description": "AI sistemlerinin koruyucusu ve standardizatörü",
  
  "core_components": {
    "ai_service": {
      "file": "app/Services/AIService.php",
      "description": "Multi-provider AI service engine",
      "methods": [
        "analyze($data, $context)",
        "suggest($context, $type)",
        "generate($prompt, $options)",
        "healthCheck()"
      ]
    },
    "ai_controller": {
      "file": "app/Http/Controllers/Api/AIController.php",
      "description": "AI API gateway",
      "endpoints": [
        "POST /api/admin/ai/analyze",
        "POST /api/admin/ai/suggest",
        "POST /api/admin/ai/generate",
        "GET /api/admin/ai/health",
        "GET /api/admin/ai/stats"
      ]
    },
    "ai_widget": {
      "file": "resources/views/admin/components/ai-widget.blade.php",
      "description": "Standard AI UI component",
      "features": [
        "Loading states",
        "Error handling",
        "Progress indicators",
        "Result formatting"
      ]
    },
    "ai_master_data": {
      "file": "database/seeders/AIMasterDataSeeder.php",
      "description": "AI configuration and prompts",
      "includes": [
        "Provider settings",
        "API keys",
        "Training data",
        "AI prompts"
      ]
    }
  },
  
  "ai_providers": {
    "openai": {
      "models": ["gpt-3.5-turbo", "gpt-4"],
      "api_endpoint": "https://api.openai.com/v1/chat/completions",
      "authentication": "Bearer token"
    },
    "google": {
      "models": ["gemini-pro"],
      "api_endpoint": "https://generativelanguage.googleapis.com/v1beta/models",
      "authentication": "API key"
    },
    "claude": {
      "models": ["claude-3-sonnet-20240229"],
      "api_endpoint": "https://api.anthropic.com/v1/messages",
      "authentication": "x-api-key"
    },
    "deepseek": {
      "models": ["deepseek-chat"],
      "api_endpoint": "https://api.deepseek.com/v1/chat/completions",
      "authentication": "Bearer token"
    },
    "ollama": {
      "models": ["llama2", "mistral", "codellama"],
      "api_endpoint": "http://localhost:11434/api/generate",
      "authentication": "None (local)"
    }
  },
  
  "usage_patterns": {
    "ai_analysis": {
      "code": "$aiService = new AIService();\n$result = $aiService->analyze($data, $context);",
      "use_case": "Kategori analizi, özellik analizi, içerik analizi"
    },
    "ai_suggestions": {
      "code": "$suggestions = $aiService->suggest($context, 'category');",
      "use_case": "Özellik önerileri, kategori önerileri, içerik önerileri"
    },
    "ai_generation": {
      "code": "$content = $aiService->generate($prompt, $options);",
      "use_case": "İçerik üretimi, başlık oluşturma, açıklama yazma"
    },
    "ai_widget": {
      "code": "<x-admin.ai-widget :action=\"'analyze'\" :endpoint=\"'/api/admin/ai/analyze'\" :title=\"'AI Analiz'\" :data=\"$data\" :context=\"$context\" />",
      "use_case": "AI widget'ları sayfalarda kullanım"
    }
  },
  
  "monitoring": {
    "ai_logs": {
      "model": "app/Models/AiLog.php",
      "fields": [
        "action",
        "provider",
        "prompt",
        "response",
        "duration",
        "status",
        "user_id"
      ]
    },
    "performance_metrics": [
      "total_requests",
      "successful_requests",
      "average_response_time",
      "most_used_provider",
      "error_rate"
    ],
    "cost_tracking": [
      "tokens_used",
      "api_calls",
      "cost_per_request",
      "monthly_cost"
    ]
  },
  
  "best_practices": {
    "always_use_ai_service": "Her AI işlemi için AIService kullan",
    "cache_results": "AI sonuçlarını cache'le",
    "handle_errors": "Error handling ekle",
    "log_requests": "Tüm AI isteklerini logla",
    "use_standard_widgets": "Standart AI widget'ları kullan",
    "monitor_performance": "AI performansını izle",
    "secure_api_keys": "API key'leri güvenli sakla",
    "rate_limiting": "Rate limiting uygula"
  },
  
  "configuration": {
    "provider_settings": {
      "table": "settings",
      "group": "ai_providers",
      "keys": [
        "openai_api_key",
        "google_api_key",
        "claude_api_key",
        "deepseek_api_key",
        "ollama_url"
      ]
    },
    "ai_settings": {
      "table": "settings",
      "group": "ai",
      "keys": [
        "ai_provider",
        "ai_default_tone",
        "ai_max_tokens",
        "ai_temperature",
        "ai_timeout"
      ]
    }
  },
  
