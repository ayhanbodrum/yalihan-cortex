{
  "event": "tailwind_css_mandatory_migration",
  "date": "2025-11-01",
  "severity": "CRITICAL",
  "impact": "ALL_PAGES",
  "decision": {
    "from": "Neo Design System (custom classes)",
    "to": "Pure Tailwind CSS + Mandatory Transitions",
    "reason": "Simplicity, maintainability, modern UX",
    "enforcement": "IMMEDIATE for new code, GRADUAL for existing"
  },
  "forbidden_patterns": {
    "neo_classes": [
      "neo-btn",
      "neo-card",
      "neo-input",
      "neo-select",
      "neo-form-group",
      "neo-label",
      "neo-textarea",
      "neo-badge",
      "neo-*"
    ],
    "bootstrap_classes": ["btn-", "card-", "form-control"]
  },
  "mandatory_requirements": {
    "transitions": {
      "all_interactive_elements": "transition-all duration-200 ease-in-out",
      "buttons": "hover:scale-105 active:scale-95",
      "cards": "hover:shadow-xl hover:-translate-y-1",
      "inputs": "focus:ring-2 focus:ring-{color}-500",
      "enforcement": "STRICT"
    },
    "dark_mode": {
      "required": true,
      "every_element": "Must have dark: variant",
      "example": "bg-white dark:bg-gray-800"
    },
    "responsive": {
      "approach": "mobile-first",
      "breakpoints": ["sm", "md", "lg", "xl", "2xl"],
      "required": true
    }
  },
  "migration_examples": {
    "button": {
