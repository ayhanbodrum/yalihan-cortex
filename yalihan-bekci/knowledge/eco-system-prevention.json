    "automated_detection": {
        "pre_commit_hooks": {
            "name": "Pre-commit Duplicate Detection",
            "description": "Commit öncesi otomatik duplicate kontrolü",

            "hooks": [
                {
                    "name": "blade-duplicate-check",
                    "command": "php artisan context7:check-blade-duplicates",
                    "description": "Blade template duplicate kontrolü",
                    "files": ["*.blade.php"],
                    "threshold": 0.85
                },
                {
                    "name": "css-duplicate-check",
                    "command": "php artisan context7:check-css-duplicates",
                    "description": "CSS class duplicate kontrolü",
                    "files": ["*.css"],
                    "threshold": "exact match"
                },
                {
                    "name": "js-duplicate-check",
                    "command": "npm run check-js-duplicates",
                    "description": "JavaScript function duplicate kontrolü",
                    "files": ["*.js"],
                    "threshold": 0.9
                }
            ]
        },

