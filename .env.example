# WikiMapia Site Arama
WIKIMAPIA_API_KEY=

# TurkiyeAPI (Köy/Belde)
TURKIYE_API_URL=https://turkiyeapi.dev/api/v1

# ================================================
# ELASTICSEARCH (Optional)
# ================================================
# docker-compose.elasticsearch.yml ile kullanılır
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http
ELASTICSEARCH_USER=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=yalihanai_

# ================================================
# CONTEXT7 COMPLIANCE
# ================================================
CONTEXT7_ENABLED=true
CONTEXT7_STRICT_MODE=true
CONTEXT7_AUTO_FIX=false
CONTEXT7_VERSION=5.4.0

# ================================================
# MONITORING & ERROR TRACKING
# ================================================
# Sentry
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_ENVIRONMENT="${APP_ENV}"

# Laravel Telescope (Development only)
TELESCOPE_ENABLED=false

# Laravel Horizon (Queue Dashboard)
HORIZON_ENABLED=false

# ================================================
# BROADCASTING
# ================================================
# Drivers: log, null, pusher, redis, ably
