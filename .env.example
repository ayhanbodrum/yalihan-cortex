# ================================================
# YALIHAN EMLAK - ENVIRONMENT CONFIGURATION
# ================================================
# Version: 4.4.0
# Last Updated: 2025-11-25
# Context7: v5.4.0

APP_NAME="Yalıhan Emlak"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Istanbul
APP_URL=http://localhost:8002
APP_LOCALE=tr
APP_FALLBACK_LOCALE=tr
APP_FAKER_LOCALE=tr_TR

# ================================================
# DATABASE CONFIGURATION
# ================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=yalihanai
DB_USERNAME=root
DB_PASSWORD=

# Database Queue/Cache Tables
DB_QUEUE_CONNECTION=
DB_QUEUE_TABLE=jobs
DB_QUEUE=default
DB_QUEUE_RETRY_AFTER=90

DB_CACHE_CONNECTION=
DB_CACHE_TABLE=cache
DB_CACHE_LOCK_CONNECTION=
DB_CACHE_LOCK_TABLE=

# ================================================
# CACHE CONFIGURATION
# ================================================
# Drivers: array, database, file, memcached, redis, dynamodb, octane
CACHE_STORE=database
CACHE_PREFIX=yalihanai_cache_

MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211
MEMCACHED_USERNAME=
MEMCACHED_PASSWORD=
MEMCACHED_PERSISTENT_ID=

# ================================================
# QUEUE CONFIGURATION
# ================================================
# Drivers: sync, database, beanstalkd, sqs, redis, null
QUEUE_CONNECTION=database

REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE=default
REDIS_QUEUE_RETRY_AFTER=90

BEANSTALKD_QUEUE_HOST=localhost
BEANSTALKD_QUEUE=default
BEANSTALKD_QUEUE_RETRY_AFTER=90

SQS_PREFIX=https://sqs.us-east-1.amazonaws.com/your-account-id
SQS_QUEUE=default
SQS_SUFFIX=

# ================================================
# SESSION CONFIGURATION
# ================================================
# Drivers: file, cookie, database, apc, memcached, redis, dynamodb, array
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_EXPIRE_ON_CLOSE=false
SESSION_ENCRYPT=false
SESSION_CONNECTION=
SESSION_TABLE=sessions
SESSION_STORE=
SESSION_COOKIE=yalihanai_session
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_PARTITIONED_COOKIE=false

# ================================================
# REDIS CONFIGURATION
# ================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

REDIS_CACHE_DB=1
REDIS_PREFIX=

# ================================================
# MAIL CONFIGURATION
# ================================================
# Mailers: smtp, sendmail, mailgun, ses, ses-v2, postmark, resend, log, array, failover, roundrobin
MAIL_MAILER=log
MAIL_SCHEME=
MAIL_URL=
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_TIMEOUT=
MAIL_EHLO_DOMAIN=

MAIL_FROM_ADDRESS="hello@yalihanai.com"
MAIL_FROM_NAME="${APP_NAME}"
MAIL_LOG_CHANNEL=

# Postmark
POSTMARK_MESSAGE_STREAM_ID=
POSTMARK_TOKEN=

# Sendmail
MAIL_SENDMAIL_PATH="/usr/sbin/sendmail -bs -i"

# ================================================
# AI CONFIGURATION (CRITICAL: OLLAMA LOCALHOST)
# ================================================
# ⚠️ GÜVENLIK: OLLAMA_API_URL localhost olarak ayarlı!
# SSH Tunnel gerekli: ssh -L 11434:localhost:11434 root@51.75.64.121 -N -f
# Production: HTTPS + Nginx Reverse Proxy zorunlu!

AI_DEFAULT_PROVIDER=ollama
AI_DEFAULT_MODEL=gemma2:2b
OLLAMA_API_URL=http://localhost:11434

# OpenAI
OPENAI_API_KEY=

# DeepSeek
DEEPSEEK_API_KEY=
DEEPSEEK_API_URL=https://api.deepseek.com

# Google Gemini
GOOGLE_AI_API_KEY=

# Anthropic Claude
CLAUDE_API_KEY=

# AI Rate Limiting
AI_RATE_LIMIT=50
AI_RATE_LIMIT_WINDOW=3600

# ================================================
# LOGGING CONFIGURATION
# ================================================
# Channels: stack, single, daily, slack, papertrail, stderr, syslog, errorlog, null
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_DAILY_DAYS=14

# Slack Logging
LOG_SLACK_WEBHOOK_URL=
LOG_SLACK_USERNAME="Laravel Log"
LOG_SLACK_EMOJI=:boom:

# Papertrail
PAPERTRAIL_URL=
PAPERTRAIL_PORT=

# Deprecations
LOG_DEPRECATIONS_CHANNEL=null
LOG_DEPRECATIONS_TRACE=false

# Syslog
LOG_SYSLOG_FACILITY=LOG_USER

# Stderr Formatter
LOG_STDERR_FORMATTER=

# ================================================
# AWS SERVICES
# ================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# DynamoDB Cache
DYNAMODB_CACHE_TABLE=cache
DYNAMODB_ENDPOINT=

# ================================================
# GOOGLE SERVICES
# ================================================
# Google Drive Backup (Laravel Backup)
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REFRESH_TOKEN=
GOOGLE_DRIVE_FOLDER=/

# Google Calendar Sync
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
