# Google Maps API
GOOGLE_MAPS_API_KEY=

# ================================================
# EXTERNAL APIs
# ================================================
# TCMB Döviz Kurları
TCMB_API_URL=https://www.tcmb.gov.tr/kurlar/today.xml

# TKGM Arsa Değerleme
TKGM_USERNAME=
TKGM_PASSWORD=
