# ================================================
# SECURITY
# ================================================
# Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# CORS
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8002,127.0.0.1,127.0.0.1:8002

# ================================================
# CUSTOM SETTINGS
# ================================================
# Default Currency (TRY, USD, EUR)
CURRENCY_DEFAULT=TRY

# Pricing Settings
COMMISSION_RATE_DEFAULT=3.0
TAX_RATE_DEFAULT=20.0

# Photo Upload
MAX_PHOTO_SIZE=5120
MAX_PHOTOS_PER_LISTING=50

# ================================================
# DEVELOPMENT TOOLS
